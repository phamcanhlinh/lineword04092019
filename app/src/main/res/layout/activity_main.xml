        android:textColor="#ffff"
        android:background="#00B7FF"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="view2"
        android:textSize="50sp" />
    <TextView
        android:textColor="#ffff"
        android:background="#776555"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="view3"
        android:textSize="50sp" />
